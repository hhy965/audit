---
interface Props {
  friendLinks: {
    name: string;
    url: string;
  }[]
}
const {friendLinks} = Astro.props;
---

<div class="p-6">
  <div class="container mx-auto">
    <h2 class="font-medium text-xl text-sky-700 mb-4">友情链接</h2>
    <div class="flex flex-wrap -mx-4">
      {friendLinks.map(item => (
        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5 px-4 mb-4">
        <a href="" class="text-gray-600 hover:text-amber-500 transition duration-300">{item.name}</a>
      </div>
      ))}
    </div>
  </div>
</div>